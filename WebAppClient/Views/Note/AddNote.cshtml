@model HelpObjects
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>New Note</h2>

<form method="post" action="/Note/Put">
    <div class="form-group">
        <label for="PatientSelect">Patient <small class="text-danger"> (requied)</small></label>
        <select class="form-control" id="PatientSelect" name="PatientId" required>
            @foreach (var patient in this.Model.Patients)
            {
                <option value="@patient.Id">@patient.FirstName @patient.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="DoctorSelect">Doctor <small class="text-danger"> (requied)</small></label>
        <select class="form-control" id="DoctorSelect" name="DoctorId" required>
            @foreach (var doctor in this.Model.Doctors)
            {
                <option value="@doctor.Id">@doctor.Initials</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="DiseaseSelect">Disease <small class="text-danger"> (requied)</small></label>
        <select class="form-control" id="DiseaseSelect" name="DiseaseId" required>
            @foreach (var disease in this.Model.Diseases)
            {
                <option value="@disease.Id">@disease.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>